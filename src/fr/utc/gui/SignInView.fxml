<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="400.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <StackPane prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #ccc;">
               <children>
                  <Label fx:id="lb_title" text="Welcome sir ! Please sign in to use this application." textFill="WHITE">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <HBox alignment="CENTER">
               <children>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" text="Username" />
                     </children>
                  </StackPane>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="tf_username" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <Label text="Password" />
                     </children>
                  </StackPane>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <PasswordField fx:id="tf_password" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btn_signIn" mnemonicParsing="false" onAction="#signIn" text="Sign in" />
               </children>
            </StackPane>
            <StackPane layoutX="10.0" layoutY="276.0" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #ececec;">
               <children>
                  <Button fx:id="btn_signUp" mnemonicParsing="false" onAction="#signUp" text="Sign up" />
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
